{
  "name": "travel-weather",
  "version": "1.0.0",
  "description": "A web application that provides real-time and predictive weather information along travel routes",
  "main": "index.js",
  "scripts": {
    "start": "node backend/index.js",
    "render-build": "npm install --prefix backend && npm install --prefix frontend && npm run build --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm run dev",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules"
  },
  "keywords": ["weather", "travel", "route", "react", "node"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^5.3.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.20.8",
    "npm": ">=8.0.0"
  }
}
